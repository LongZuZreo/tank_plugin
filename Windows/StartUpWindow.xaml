<Window x:Class="tank_plugin.StartUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:tank_plugin"
        mc:Ignorable="d"
        Title="StartUpWindow" 
        Height="450" Width="800"
        MaxHeight="450" MaxWidth="800"
        MinHeight="450" MinWidth="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
>
    
    <DockPanel>
        <Image Source="../images/timg.jpg" DockPanel.Dock="Top" Margin="-5,0,-5,0"></Image>
        <ProgressBar Height="2"  Foreground="Aqua" x:Name="progressBar" DockPanel.Dock="Bottom" Margin="0,-8,0,-5"></ProgressBar>
    </DockPanel>
    
</Window>
